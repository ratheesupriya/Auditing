{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "AuditingADF"
		},
		"AzureSqlDatabase1_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'AzureSqlDatabase1'"
		},
		"AzureSqlDatabaseLinkedServer_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'AzureSqlDatabaseLinkedServer'"
		},
		"Auditing_trigger_properties_pipeline1_parameters_EmailTo": {
			"type": "string",
			"defaultValue": "amitsaini3331@gmail.com"
		},
		"Auditing_trigger_properties_pipeline1_parameters_Activity": {
			"type": "string",
			"defaultValue": "Failure"
		},
		"Auditing_trigger_properties_pipeline1_parameters_ErrorMessage": {
			"type": "string",
			"defaultValue": "@{activity('Failure').Error.Message}"
		},
		"containerUri": {
			"type": "string",
			"metadata": "URI to storage account containing linked ARM templates"
		},
		"containerSasToken": {
			"type": "string",
			"metadata": "Sas token to storage account containing linked ARM templates"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "AuditingADF_ArmTemplate_0",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"AzureSqlDatabase1_connectionString": {
						"value": "[parameters('AzureSqlDatabase1_connectionString')]"
					},
					"AzureSqlDatabaseLinkedServer_connectionString": {
						"value": "[parameters('AzureSqlDatabaseLinkedServer_connectionString')]"
					},
					"Auditing_trigger_properties_pipeline1_parameters_EmailTo": {
						"value": "[parameters('Auditing_trigger_properties_pipeline1_parameters_EmailTo')]"
					},
					"Auditing_trigger_properties_pipeline1_parameters_Activity": {
						"value": "[parameters('Auditing_trigger_properties_pipeline1_parameters_Activity')]"
					},
					"Auditing_trigger_properties_pipeline1_parameters_ErrorMessage": {
						"value": "[parameters('Auditing_trigger_properties_pipeline1_parameters_ErrorMessage')]"
					}
				}
			},
			"dependsOn": []
		}
	]
}